# ─── builder stage ─────────────────────────────────────────────
FROM python:3.12-slim AS builder

# install build tools, then immediately clean up apt lists
RUN apt-get update \
 && apt-get install -y --no-install-recommends gcc libffi-dev \
 && rm -rf /var/lib/apt/lists/*

WORKDIR /app

# install into an isolated directory
COPY requirements.txt .
RUN pip wheel --no-cache-dir --wheel-dir=/wheels -r requirements.txt

# ─── runtime stage ─────────────────────────────────────────────
FROM python:3.12-slim

# runtime only; no compilers
RUN apt-get update \
 && apt-get install -y --no-install-recommends libffi7 \
 && rm -rf /var/lib/apt/lists/*

WORKDIR /app

# copy just the wheels & install
COPY --from=builder /wheels /wheels
RUN pip install --no-index --no-cache-dir /wheels/*

# copy application code
COPY . .

EXPOSE 5000

CMD ["gunicorn", "-w", "4", "-b", "0.0.0.0:5000", "app:app"]
