# ─── builder stage ─────────────────────────────────────────────
FROM python:3.12-slim AS builder

# install build tools, then immediately clean up apt lists
RUN apt-get update \
 && apt-get install -y --no-install-recommends gcc libffi-dev \
 && rm -rf /var/lib/apt/lists/*

WORKDIR /app

# build your dependencies into wheels
COPY requirements.txt .
RUN pip wheel --no-cache-dir --wheel-dir=/wheels -r requirements.txt

# ─── runtime stage ─────────────────────────────────────────────
FROM python:3.12-slim

# install only the runtime shared‑library, then clean apt lists
RUN apt-get update \
 && apt-get install -y --no-install-recommends libffi8 \
 && rm -rf /var/lib/apt/lists/*

WORKDIR /app

# copy in the pre‑built wheels and install them
COPY --from=builder /wheels /wheels
RUN pip install --no-index --no-cache-dir /wheels/*

# copy your application code
COPY . .

EXPOSE 5000
CMD ["gunicorn", "-w", "4", "-b", "0.0.0.0:5000", "app:app"]
